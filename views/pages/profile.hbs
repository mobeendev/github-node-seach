<div class="container">
   {{#if github }}
   <div>
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title">{{user.displayName}}</h3>
         </div>
         <div class="panel-body">
            <div class="row">
               <div class="col-md-4">
                  <img class="img-thumbnail github-avatar" src="{{user._json.avatar_url}}">
               </div>
               <div class="col-md-8">
                  <div class="stats">
                     <span class="badge badge-info">{{user._json.following}} Following</span>
                     <span class="badge badge-primary">{{user._json.public_gists}} Public Gists</span>
                     <span class="badge badge-success">{{user._json.followers}} Followers</span>
                     <span class="badge badge-warning">{{user._json.public_repos}} Public Repos</span>
                  </div>
                  <br>
                  <ul class="list-group">
                     <li class="list-group-item"><strong>Username: </strong>{{user._json.login}}</li>
                     <li class="list-group-item"><strong>Location: </strong>{{user._json.location}}</li>
                     <li class="list-group-item"><strong>Email: </strong>{{user._json.email}}</li>
                     <li class="list-group-item"><strong>Blog: </strong>{{user._json.blog}}</li>
                     <li class="list-group-item"><strong>Company: </strong>{{user._json.company}}</li>
                     <li class="list-group-item"><strong>Location: </strong>{{user._json.location}}</li>
                     <li class="list-group-item"><strong>Bio: </strong>{{user._json.bio}}</li>
                  </ul>
               </div>
            </div>
         </div>
      </div>

   </div>
   {{/if}} {{# if gmail }}
   <br>
   <div class="panel panel-default">
      <div class="panel-heading">
         <h3 class="panel-title">{{user.displayName}}</h3>
      </div>
      <div class="panel-body">
         <div class="row">
            <div class="col-md-4">

               <img class="img-thumbnail github-avatar" src=" {{ gmailphoto }}">
            </div>
            <div class="col-md-8">
               <ul class="list-group">
                  <li class="list-group-item"><strong>Tagline: </strong>{{user._json.tagline}}</li>
                  <li class="list-group-item"><strong>Occupation: </strong>{{user._json.occupation}}</li>
                  <li class="list-group-item"><strong>Skills: </strong>{{user._json.skills}}</li>
                  <li class="list-group-item"><strong>Gender: </strong>{{user._json.gender}}</li>
               </ul>
            </div>
         </div>
      </div>
   </div>

   {{/if}} {{# if fb }}
   <br>
   <div class="panel panel-default">
      <div class="panel-heading">
         <h3 class="panel-title">{{user.displayName}}</h3>
      </div>
      <div class="panel-body">
         <div class="row">
            <div class="col-md-4">

               <img class="img-thumbnail github-avatar" src="/images/fb.jpg">
            </div>
            <div class="col-md-8">
               <ul class="list-group">
                  <li class="list-group-item"><strong>ID: </strong>{{user.id}}</li>
                  <li class="list-group-item"><strong>Name: </strong>{{user.displayName}}</li>
               </ul>
            </div>
         </div>
      </div>
   </div>

   {{/if}}
</div>